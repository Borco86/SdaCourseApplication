<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prophecy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rent.sdacourseapplication.prophecy.ProphecyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Potrząśnij, żeby zobaczyć wróżbę" />

    <FrameLayout
        android:id="@+id/prophecy_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:visibility="invisible">

        <TextView
            android:id="@+id/prophecy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Szedł Grześ Przez wieś"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </FrameLayout>

</FrameLayout>
